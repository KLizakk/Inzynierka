@model Inzynierka.Models.Driver

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły Kierowcy</h1>

<div>
    <h4>Kierowca</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Numer telefonu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Data urodzenia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            Uprawnienia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PermissionNeeded)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DriverId">Edytuj</a> |
    <a asp-action="Index">Powrót do listy</a>
</div>
