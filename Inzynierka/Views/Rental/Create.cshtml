@model Rental

@{
    ViewBag.Title = "Utwórz Wynajem";
}

<h2>Utwórz Wynajem</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="Car">Wybierz Pojazd</label>
        <select asp-for="RegistrationNumber" class="form-control" asp-items="@(new SelectList(ViewBag.Cars, "RegistrationNumber", "Model"))">
            <option value="">-- Wybierz pojazd --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Driver">Wybierz Kierowcę</label>
        <select asp-for="DriverId" class="form-control" asp-items="@(new SelectList(ViewBag.Drivers, "DriverId", "FullName"))">
            <option value="">-- Wybierz kierowcę --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label">Data Rozpoczęcia</label>
        <input asp-for="StartDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label">Data Zakończenia</label>
        <input asp-for="EndDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label">Uwagi</label>
        <input asp-for="Notes" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Utwórz</button>
</form>
