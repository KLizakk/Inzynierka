@model Rental

@{
    ViewBag.Title = "Create Rental";
}

<h2>Create Rental</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="Car">Select Car</label>
        <select asp-for="RegistrationNumber" class="form-control" asp-items="@(new SelectList(ViewBag.Cars, "RegistrationNumber", "Model"))">
            <option value="">-- Select a car --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Driver">Select Driver</label>
        <select asp-for="DriverId" class="form-control" asp-items="@(new SelectList(ViewBag.Drivers, "DriverId", "FullName"))">
            <option value="">-- Select a driver --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label"></label>
        <input asp-for="Notes" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
