@model IEnumerable<Inzynierka.Models.Rental>
@{
    ViewBag.Title = "Rental List";
}

<h2>Rental List</h2>
<h3><a asp-action="Create">Create Rental</a></h3>

<table class="table">
    <thead>
        <tr>
            <th>Driver</th>
            <th>Car</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.Driver.FullName</td>
                <td>@rental.Car.RegistrationNumber</td>
                <td>@rental.StartDate.ToShortDateString()</td>
                <td>@rental.EndDate?.ToShortDateString()</td>
                <td>@rental.Notes</td>
                <td>
                    <a asp-action="History" asp-route-registrationNumber="@rental.Car.RegistrationNumber">View Car History</a>

                </td> 
                <td>
                    <a asp-action="History" asp-route-driverId="@rental.Driver.DriverId">View Driver History</a>
                </td>
                    
                
                <td>
                    <a asp-action="ReturnCar" asp-route-rentalId="@rental.Id">Return</a>
                </td>
            </tr>
        }
    </tbody>
</table>
