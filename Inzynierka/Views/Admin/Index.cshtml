@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h1>Lista użytkowników</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa użytkownika</th>
            <th>Email</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="EditRoles" asp-route-userId="@user.Id" class="btn btn-primary">Zarządzaj rolami</a>
                </td>
            </tr>
        }
    </tbody>
</table>
