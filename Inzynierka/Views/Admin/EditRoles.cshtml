@model EditRolesViewModel

<h1>Role użytkownika: @Model.UserName</h1>

<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <table class="table">
        <thead>
            <tr>
                <th>Rola</th>
                <th>Przypisz</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++) 
            {
                <tr>
                    <td>@Model.Roles[i].RoleName</td>
                    <td>
                        <!-- Poprawne odwołanie dla list -->
                        <input type="checkbox" name="Roles[@i].IsAssigned" value="true" @(Model.Roles[i].IsAssigned ? "checked" : "") />
                        <input type="hidden" name="Roles[@i].RoleName" value="@Model.Roles[i].RoleName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
